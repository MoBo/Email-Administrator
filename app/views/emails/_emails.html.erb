<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>
<table class="pretty">
  <tr>
    <th><%= sortable "email" %></th>
    <th><%= sortable "expires" %></th>
    <th><%= sortable "domain_id" %></th>
    <th><%= sortable "active" %></th>
    <th><%= sortable "edit" %></th>
  </tr>
  <% for email in @emails %>
    <tr>
      <td><%= email.email %></td>
      <td ><%= email.expires %></td>
      <td ><%= email.domain.name %></td>
      <td><%=  email.active %></td>
      <td><%= link_to "Edit", [:edit,email] %></td>
    </tr>
  <% end %>
</table>

<%= page_navigation_links @emails %>
