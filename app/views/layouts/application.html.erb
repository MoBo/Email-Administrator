<!DOCTYPE html>
<html>
<head>
  <title>Email Administrator</title>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="/">Email Administrator</a>
        <div class="nav-collapse">
          <ul class="nav">
            <li><%= link_to "Emails", emails_path %></li>
            <li><%= link_to "Domains", domains_path %></li>
            <li><%= link_to "Stats" %></li>
          </ul>
          <ul class="nav pull-right">
            <li><%= link_to_if email_signed_in?, "Logout", destroy_email_session_path, :method => :delete%></li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
  	 <div class="span12">
  		<% if flash[:notice] %>
	  		<div class="alert">
			  <a class="close" data-dismiss="alert">×</a>
			  <%= flash[:notice] %>
			</div>
	    <% end %>
	    <% if flash[:error] %>
	     	<div class="alert alert-error">
			  <a class="close" data-dismiss="alert">×</a>
			  <%= flash[:error] %>
			</div>
	    <% end %>
	    <% if flash[:alert] %>
	     	<div class="alert alert-error">
			  <a class="close" data-dismiss="alert">×</a>
			  <%= flash[:alert] %>
			</div>
	    <% end %>
    </div>
    <div class="span12">
  		<%= yield %>
  	</div>
  </div>
  <%- if Rails.env.development? %>
  <div class="container">
	  <div class="span9">
	      	<% flash.each do |key, value| %>
	          <div class="alert alert-<%= key %>"><%= value %></div>
	        <% end %>
	        <h2>Console</h2>
	        <%= debug(params)  %>
	  <%- end%>
  </div>
  </div>
</body>
</html>